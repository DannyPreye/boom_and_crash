# Environment Variables for Deriv Prediction Bot
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Deriv API Configuration
DERIV_API_URL=wss://ws.derivws.com/websockets/v3
DERIV_API_TOKEN=your_deriv_api_token_here
DERIV_APP_ID=1089

# Google Gemini Configuration
GEMINI_API_KEY=your_google_gemini_api_key_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Prediction Engine Configuration
PREDICTION_CACHE_TTL=300
MAX_HISTORICAL_CANDLES=1000
ENSEMBLE_WEIGHTS_GEMINI=0.30
ENSEMBLE_WEIGHTS_LSTM=0.25
ENSEMBLE_WEIGHTS_STATISTICAL=0.20
ENSEMBLE_WEIGHTS_TRANSFORMER=0.25

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY_HEADER=X-API-Key

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backtesting Configuration
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_BALANCE=1000
